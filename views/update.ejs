<%- include("partials/header") -%>
<div class="compose">
    <h1>Dear Favourite Person,</h1>
    <br>
    <form action="/updatedPost" method="post">
            <div >
                <div class="form-outline">
                    <label class="form-label" for="typeText">Title</label>
                    <input type="text" id="typeText" class="form-control" value="<%= logs.title %>" autocomplete="off" name="topic"/>
                  </div>
                <div class="form-outline">
                    <label class="form-label" for="textAreaExample">Log</label>
                    <textarea class="form-control" id="textAreaExample" rows="4" name="log" placeholder="Start writing your log here...."><%= logs.mylogs %></textarea>
                </div>
                <div class="bottomCompose">
                    <input type="hidden" name="id" value="<%= logs._id %>">
                    <button type="submit" class="btn btn-dark btn-primary">Update</button>
                    <button type="reset" class="btn btn-secondary btn-dark">Reset</button>
                </div>
            </div>
        
    </form>
</div>
<%- include("partials/footer") -%>
